{
  "name": "lms",
  "version": "1.0.0",
  "description": "Production-ready Learning Management System built with Node.js, Express, MongoDB, and EJS.",
  "main": "src/server.js",
  "scripts": {
    "dev:server": "nodemon src/server.js",
    "dev:client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "npm run build --prefix client",
    "start": "node src/server.js",
    "lint": "echo \"Add a linter (e.g., ESLint) if needed\"",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "seed": "node src/scripts/seed.js"
  },
  "keywords": [],
  "author": "Tuan Anh",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
